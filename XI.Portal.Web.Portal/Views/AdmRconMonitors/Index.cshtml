@using XI.Portal.Web.Portal.Extensions
@model IEnumerable<XI.Portal.Data.Core.Models.RconMonitor>

@{
    ViewBag.Title = "Rcon Monitors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-sm-12">

            <div class="ibox">
                <div class="ibox-content">

                    <table class="table">
                        <tr>
                            <th>
                                @Html.Label("Game")
                            </th>
                            <th>
                                @Html.Label("Server")
                            </th>
                            <th>
                                @Html.Label("Monitor Map Rotation")
                            </th>
                            <th>
                                @Html.Label("Monitor Players")
                            </th>
                            <th>
                                @Html.Label("Monitor Player IPs")
                            </th>
                            <th>
                                @Html.Label("Last Updated")
                            </th>
                            <th>
                                @Html.Label("Has Error")
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.GameTypeIcon(item.GameServer.GameType)
                                </td>
                                <td>
                                    @Html.ServerName(item.GameServer)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonitorMapRotation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonitorPlayers)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MonitorPlayerIPs)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastUpdated)
                                </td>
                                <td>
                                    @(string.IsNullOrWhiteSpace(item.LastError) ? Html.Label("No") : Html.Label("Yes"))
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new {id = item.RconMonitorId}) |
                                    @Html.ActionLink("Delete", "Delete", new {id = item.RconMonitorId})
                                </td>
                            </tr>
                        }

                    </table>

                </div>
            </div>

        </div>
    </div>

</div>