@{
    ViewBag.Title = "User Logs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-sm-12">

            <div class="jqGrid_wrapper">
                <table id="logsList"></table>
                <div id="logsListPager"></div>
            </div>

        </div>
    </div>

</div>

@section Styles {
    @Styles.Render("~/content/free-jqgrid")
}

@section Scripts {
    @Scripts.Render("~/bundles/free-jqgrid")

    <script type="text/javascript">
        $(document).ready(function () {

            jQuery("#logsList").jqGrid({
                url: '/AdmLogs/GetUserLogsAjax',
                datatype: 'json',
                mType: 'GET',
                colNames: ['Username', 'Message', 'Timestamp'],
                colModel: [
                    {
                        name: 'Username',
                        index: 'Username',
                        width: 30,
                        sortable: false
                    },
                    {
                        name: 'Message',
                        index: 'Message',
                        sortable: false
                    },
                    {
                        name: 'Timestamp',
                        index: 'Timestamp',
                        width: 30,
                        sortable: false
                    }
                ],
                pager: '#logsListPager',
                rowNum: 20,
                height: 700,
                autowidth: true,
                caption: 'System Logs',
                guiStyle: "bootstrap4",
                icons: "fontAwesome",
                hidegrid: false
            }).navGrid('#logsListPager',
                {
                    edit: false,
                    add: false,
                    del: false,
                    search: false,
                    refresh: true,

                    searchtext: "Search",
                    refreshtext: "Refresh"
                });

        });
    </script>
}