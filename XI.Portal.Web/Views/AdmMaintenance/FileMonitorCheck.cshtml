@using XI.Portal.Web.Extensions
@model List<XI.Portal.Web.ViewModels.AdmMaintenance.FileMonitorStatusViewModel>

@{
    ViewBag.Title = "File Monitor Check Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">

                        <h2>[@item.GameServer.Title] - @Html.ServerName(item.GameServer)</h2>

                        <p>
                            <text><strong>File Path: </strong>ftp://@item.GameServer.FtpHostname/@item.FileMonitor.FilePath</text><br />
                            <text><strong>Last Modified: </strong>@item.LastModified</text><br />
                            <text><strong>Size: </strong>@item.FileSize</text><br />

                            @if (item.SomethingMayBeWrong && !item.HasError)
                            {
                                <div class="alert alert-danger">SOMETHING MAY BE WRONG - INVESTIGATE!</div>
                            }
                            else
                            {
                                <div class="alert alert-success">LOOKS GOOD</div>
                            }
                        </p>

                        @if (item.HasError)
                        {
                            <div class="alert alert-danger">
                                <p>
                                    <text><strong>Error: </strong>@item.ErrorMessage</text>
                                </p>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    }

</div>