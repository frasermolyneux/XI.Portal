@{
    ViewBag.Title = "Admin Actions Analytics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var viewbagFilterRange = ViewBag.DateFilterRange;

    DateTime filterRange;
    if (viewbagFilterRange == null)
    {
        filterRange = DateTime.UtcNow.AddYears(-1);
    }
    else
    {
        filterRange = (DateTime)viewbagFilterRange;
    }
}

<div class="wrapper wrapper-content animated fadeInRight">

    <h1>Admin Actions Analytics</h1>

    <div class="row">
        <div class="col-sm-12">

            <div class="ibox">
                <div class="form-group" id="data_1">
                    <div class="input-group date">
                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input readonly="readonly" id="filterDate" type="text" class="form-control" value="@filterRange.ToShortDateString()">
                    </div>
                    <label class="font-normal">Select the cutoff date for analytics</label>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">

            <div class="ibox">

                <div class="ibox-content">
                    <div id="adminActionsAnalytics"></div>
                </div>

            </div>

        </div>
    </div>

</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script type="text/javascript">

      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {

          var cutoff = $("#filterDate").val();

          $.getJSON("/Analytics/GetDailyActionsJson?cutoff=" + cutoff, function (jsonData) {

              var data = new google.visualization.DataTable();
              data.addColumn('date', 'Created');
              data.addColumn('number', 'Count');

              $.each(jsonData, function (key, val) {
                  data.addRow([
                      moment(val.Created).toDate(),
                      val.Count
                  ]);
              });

              var chartWidth = $('#PlayersPerGameAnalytics').width();

              var options = {
                  title: 'Admin action activity since ' + cutoff,
                  width: chartWidth,
                  height: 500,
                  hAxis: {
                      format: 'M/d/yy',
                      gridlines: {count: 30}
                  },
                  vAxis: {
                      gridlines: {color: 'none'},
                      minValue: 0
                  }
              };

              var chart = new google.visualization.ScatterChart(document.getElementById('adminActionsAnalytics'));
              chart.draw(data, options);
          });
      }

      window.onload = function(){
          $('#data_1 .input-group.date').datepicker({
              todayBtn: "linked",
              keyboardNavigation: false,
              forceParse: false,
              calendarWeeks: true,
              autoclose: true
          });

          $('#filterDate').change(function() {
              drawPlayersChart();
              drawPlayersPerGameChart();
          });
      };

</script>