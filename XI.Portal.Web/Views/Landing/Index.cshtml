        <li data-target="#inSlider" data-slide-to="1"></li>
        <li data-target="#inSlider" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <div class="container">
                <div class="carousel-caption">
                    <h1>
                        The most popular<br/>
                        Insurgency servers<br/>
                        and community!
                    </h1>
                    <p>We run three of the most popular Insurgency servers!</p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="#" role="button">READ MORE</a>
                    </p>
                </div>
                <div class="carousel-image">
                    <img src="~/Images/landing/insurgency.jpg" alt="insurgency"/>
                </div>
            </div>
            <!-- Set background for slide in css -->
            <div class="header-back one"></div>
        </div>
        <div class="carousel-item">
            <div class="container">
                <div class="carousel-caption blank">
                    <h1>Running over 25 servers!<br/>on 12+ multiplayer games</h1>
                    <p>Not just COD!</p>
                    <p>
                        @Html.ActionLink("View Servers", "Index", "Servers", new {}, new {@class = "btn btn-lg btn-primary", role = "button"})
                    </p>
                </div>
                <div class="carousel-image">
                    <img src="~/Images/landing/not-just-cod.jpg" alt="not-just-cod"/>
                </div>
            </div>
            <!-- Set background for slide in css -->
            <div class="header-back one"></div>
        </div>

        <div class="carousel-item">
            <div class="container">
                <div class="carousel-caption blank">
                    <h1>A HUGE community with<br/>over 600 members!</h1>
                    <p>From all across the world</p>
                    <p>
                        <a class="btn btn-lg btn-primary" href="https://www.xtremeidiots.com/page/index" role="button">View Website</a>
                    </p>
                </div>
                <div class="carousel-image">
                    <img src="~/Images/landing/world-flags.jpg" alt="world-flags"/>
                </div>
            </div>
            <!-- Set background for slide in css -->
            <div class="header-back one"></div>
        </div>

    </div>
    <a class="carousel-control-prev" href="#inSlider" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#inSlider" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

