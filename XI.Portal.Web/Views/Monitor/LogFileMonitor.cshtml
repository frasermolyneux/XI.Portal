@using XI.Portal.Web.Extensions
@model List<XI.Portal.Web.ViewModels.Monitor.FileMonitorStatusViewModel>

@{
    ViewBag.Title = "File Monitor Check Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">

    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content">

                        <h2>@Html.GameTypeIcon(item.GameServer.GameType) @Html.ServerName(item.GameServer) - (@item.GameServer.Title)</h2>

                        <p>
                            <text><strong>File Path: </strong>ftp://@item.GameServer.FtpHostname@item.FileMonitor.FilePath</text><br />
                            <text><strong>Remote Modified: </strong>@item.LastModified</text><br />
                            <text><strong>Remote Size: </strong>@item.FileSize</text><br />


                            @if (item.HasError)
                            {
                                <div class="alert alert-danger">ERROR: @item.ErrorMessage</div>
                            }
                            else if (item.SomethingMayBeWrong)
                            {
                                <div class="alert alert-danger">SOMETHING MAY BE WRONG - INVESTIGATE!</div>
                            }
                            else
                            {
                                <div class="alert alert-success">LOOKS GOOD</div>
                            }
                        </p>

                    </div>
                </div>
            </div>
        </div>
    }

</div>